#chat-name-input-wrap
	background-color darken(bg_menu, 30%)
	flex 1 0 
	flex-container(row, center, center)
	display none

	&.active
		display flex
	&.active ~ #chat 
		display none

	input#chat-name-input
		box-shadow 0 0 15px 0px rgba(0,0,0,0.4)
		color white
		background-color bg_menu
		border 2px solid darken(bg_menu, 10%)
		border-radius 3px
		padding 20px 40px
		font-size 200%
		outline 0
		 